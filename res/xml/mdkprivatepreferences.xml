<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- What type of auth to use FormAuthLoginTask or LocalAuthLoginTask? -->
    <EditTextPreference
        android:defaultValue="@string/loginTaskDefaultValue"
        android:key="@string/loginTaskKey" />

    <!-- The username field -->
    <EditTextPreference
        android:defaultValue=""
        android:key="@string/usernameKey" />

    <!-- Default server to connect to -->
    <EditTextPreference
        android:defaultValue="https://magetpm.geointapps.org"
        android:key="@string/serverURLKey" />

    <!-- How often to push obersvations? -->
    <EditTextPreference
        android:defaultValue="@string/observationPushFrequencyDefaultValue"
        android:key="@string/observationPushFrequencyKey" />

</PreferenceScreen>